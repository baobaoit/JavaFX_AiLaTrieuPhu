                  <ToggleGroup fx:id="gioiTinh" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="rdoNu" mnemonicParsing="false" text="Nữ" toggleGroup="$gioiTinh" />
            <RadioButton fx:id="rdoKhac" mnemonicParsing="false" text="Khác" toggleGroup="$gioiTinh" />
         </children>
      </HBox>
      <TextField fx:id="txtNamSinh" GridPane.columnIndex="1" GridPane.rowIndex="4" />
